		<% if flash[:errors] %>
			<% flash[:errors].each do |error| %>
				<p class="alert alert-danger"><%= error %></p>
			<% end %>
		<% end %>
		<div class="container">
			<div class="row">
	      <div class="col-md-6">
	      	<h1>Sign In</h1>
					<%= simple_form_for @user, url: sessions_create_path do |f| %>
						<%= f.input :email %>
						<%= f.input :password %>
						<div class="form-group reg-submit">
							<div class="col-lg-6 col-lg-offset-4">
								<%= f.button :submit, "Sign In", :class => 'btn btn-primary btn-lg' %>
							</div>
						</div>
					<% end %>
	      </div>
	    </div>
    </div>

    