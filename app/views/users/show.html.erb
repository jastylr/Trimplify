<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p class="alert alert-danger"><%= error %></p>
	<% end %>
<% end %>

<div class="container">
	<div class="row">
		<div class="profile-header clearfix">
			<h3><%= current_user.first_name %> <%= current_user.last_name %>'s Profile</h3>
			<div class="col-sm-2">
				<div class="profile">
					<div class="profile-pic img-responsive">
						<%= image_tag(@profile_pic.nil? ? (@gender == 'M' ? "profiles/user-default.jpg" : "profiles/user-default-fem.jpg") : @profile_pic, :alt => '') %>
					</div>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="profile-table">
					<div class="profile-row">
						<div class="profile-cell strong">Gender</div>
						<div class="profile-cell"><%=(@gender == 'M' ? 'Male' : 'Female') %></div>
					</div>
					<div class="profile-row">
						<div class="profile-cell strong">Age </div>
						<div class="profile-cell"><%=@age %></div>
					</div>
					<div class="profile-row">
						<div class="profile-cell strong">My Goal is to </div>
						<div class="profile-cell"><%=@goal %></div>
					</div>
					<div class="profile-row">
						<div class="profile-cell strong">My Starting Weight is</div>
						<div class="profile-cell"><%=@start_weight %> lbs.</div>
					</div>
					<div class="profile-row">
						<div class="profile-cell strong">My Target Weight is</div>
						<div class="profile-cell"><%=@target_weight %> lbs.</div>
					</div>
					<div class="profile-row">
						<div class="profile-cell strong">My Activity Level is</div>
						<div class="profile-cell"><%=@activity_level %></div>
					</div>
					
					<div>
						<%= link_to edit_user_vital_path, :class => 'edit-vitals btn btn-primary btn-sm' do %>
					    <%= content_tag(:span, "" ,:class=>' glyphicon glyphicon-pencil') %> Edit Vitals
					  <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div id="user-vitals">
		<%= render 'user_vitals' %>
	</div>

	<div class="row">
		<div class="col-sm-8">
			<div id="weight-input-form" class="clearfix">
				<%= render 'weight_input_form' %>
				<span class="notice"></span>
			</div>
			<div class="weight-input-date">Last recorded weight date: <span><%= @weight_input_date %></span></div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-8">
			<div id="goal-date" class="complete-date">
				<%= render 'completion_date' %>
			</diV>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12">
			<h4>Today's Calories at a Glance</h4>
			<div class="box-container clearfix">
				<div class="bar green-bar">consumed: 1850</div>
				<div class="bar orange-bar">burned: 428</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-10">
			<div id="user-weight-chart" class="clearfix">
				<%= render partial: 'weight_chart', locals: { weight: @weight, target_weight: @target_weight} %>
			</div>			
		</div>
	</div>
</div>